<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.somya.client_feedback_application.delete_visit_details"
    android:background="#ffffff">

    <EditText android:id="@+id/to_eventdate" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Select event date"
        android:maxLines="1" android:singleLine="true"
        android:textColor="#050505"
        android:typeface="serif"
        android:layout_below="@+id/spinner2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="120dp"></EditText>

    <AutoCompleteTextView android:id="@+id/orgname2" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Organisation name"
        android:maxLines="1" android:singleLine="true"
        android:textColor="#050505"
        android:typeface="serif"
        android:layout_below="@+id/to_eventdate"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:id="@+id/spinner"
        android:clickable="true"
        android:typeface="serif"
        android:hint="Select event location"
        android:outlineProvider="background"
        android:layout_above="@+id/Next"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="50dp" />

    <Button android:id="@+id/delete_button" style="?android:textAppearanceSmall"
        android:layout_width="200dp" android:layout_height="40dp"
        android:text="Delete visit details"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:background="#004080"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
