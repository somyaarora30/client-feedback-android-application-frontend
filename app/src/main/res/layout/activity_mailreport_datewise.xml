<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#ffffff"
    android:typeface="serif">

    <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
        android:background="#ffffff">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:text="Report"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:id="@+id/textview3"
        android:background="#004080"
        android:layout_alignParentEnd="true"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table1"
        android:layout_marginTop="40dp">

        <TableRow android:id="@+id/row1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Topics"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:id="@+id/row11"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="left"
                android:layout_column="0"
                android:layout_marginLeft="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Rating"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:id="@+id/row12"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_column="8"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/table2"
        android:layout_marginTop="40dp"
        android:layout_below="@id/table1">

        <TableRow android:id="@+id/row3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questions"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:id="@+id/row121"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_weight="1"
                android:layout_marginLeft="60dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Average Rating"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#050505"
                android:id="@+id/row122"
                android:typeface="serif"
                android:textStyle="bold"
                android:layout_column="8"
                android:layout_marginRight="20dp"
                android:layout_weight="1" />

        </TableRow>


    </TableLayout>

        <EditText
            android:id="@+id/mailID"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="#050505"
            android:typeface="serif"

            android:layout_below="@+id/table2"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/mail_report"
            android:hint="Enter mail ID to send report"
            android:layout_marginTop="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="60dp" />

        <Button android:id="@+id/mail_report" style="?android:textAppearanceSmall"
            android:layout_width="200dp" android:layout_height="40dp"
            android:text="Mail Report"
            android:textStyle="bold"
            android:textColor="#ffffffff"
            android:background="#004080"
            android:typeface="serif"
            android:layout_below="@+id/table2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp" />


    </RelativeLayout>
</ScrollView>