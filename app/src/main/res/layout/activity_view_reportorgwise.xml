<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.somya.client_feedback_application.view_report3"
    android:background="#ffffff"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:text="View Report"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:id="@+id/textview3"
        android:background="#004080"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="From"
        android:id="@+id/textView6"
        android:textColor="#050505"
        android:typeface="serif"
        android:layout_below="@+id/textview3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="To"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:id="@+id/textView7"
        android:typeface="serif"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true"
        android:layout_marginTop="57dp" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="Organisation Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#050505"
        android:id="@+id/textView8"
        android:typeface="serif"
        android:layout_alignBaseline="@+id/orgname"
        android:layout_alignBottom="@+id/orgname"
        android:layout_alignParentStart="true" />

    <EditText android:id="@+id/to_eventdate" android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:maxLines="1" android:singleLine="true"
        android:textColor="#050505"
        android:typeface="serif"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignEnd="@+id/textview3"></EditText>

    <EditText android:id="@+id/orgname" android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:maxLines="1" android:singleLine="true"
        android:textColor="#050505"
        android:typeface="serif"
        android:layout_below="@+id/to_eventdate"
        android:layout_alignEnd="@+id/textview3"
        android:layout_marginTop="35dp"></EditText>

    <Button android:id="@+id/view_report" style="?android:textAppearanceSmall"
        android:layout_width="200dp" android:layout_height="40dp"
        android:text="View Report"
        android:textStyle="bold"
        android:textColor="#ffffffff"
        android:background="#004080"
        android:typeface="serif"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/from_eventdate"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="#050505"
        android:typeface="serif"
        android:layout_alignTop="@+id/textView6"
        android:layout_alignEnd="@+id/to_eventdate"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
